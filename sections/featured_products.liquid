<div class="product-slider featured_product_sections_wrap">
  <div class="container">
    <div class="product-header">
      <h2>{{ section.settings.header }}</h2>
    </div>
    <div class="display-product">
         {%- for block in section.blocks -%}
          <div>
          <div class="variant-details">
            <div class="variant-image">
              <img src="{{ block.settings.varinat_image |img_url:'master' }}">
            </div> 
            <div class="details-product">
            <div class="product-variant-title">
              <p> {{ block.settings.variant_title }}</p>
              <p>{{ block.settings.product_title }}</p>
            </div>
              <div class="price-button">
            <div class="variant-title-price">
              <p>{{ block.settings.price }}</p>
            </div>
            <div class="product-variant-button">
              <a href="{{block.settings.button_url}}">{{ block.settings.button }}</a>
            </div>
              </div>
            </div>
          </div>
          </div>
        {% endfor %}
    </div>
  </div>
</div>







