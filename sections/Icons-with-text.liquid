<div class="icons-with-text">
  <div class="container">
    <div class="image-text-icon-wrapper">
      {% for block in section.blocks %}
        <div class="image-text">
        {% if block.settings.image !=blank %}
          <div class="icon-image">
            <img src="{{ block.settings.image |img_url:'master'}}">
          </div>
          {% endif %}
          <div class="icon-heading">
            <h3>{{ block.settings.heading }}</h3>
          </div>
          <div class="icon-text">
            <p>{{ block.settings.text }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>






{% schema %}
  {
    "name": "icons-with-text",
    "settings": [],
    "blocks":[
      {
        "name":"icons",
        "type":"icons",
        "settings":[
          {
            "type":"image_picker",
            "id":"image",
            "label":"Select Image"
          },
          {
            "type":"text",
            "id":"heading",
            "label":"Enter Heading"
          },
          {
            "type":"text",
            "id":"text",
            "label":"Enter text"
          }
        ]
      }
    ],
    "presets":[
      {
        "name":"icons-with-text"
      }
    ]
  }
{% endschema %}

