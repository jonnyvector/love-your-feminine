  {
    "name": "multi text with image",
    "settings": [
      {
            "type": "image_picker",
            "id": "last_sect_id",
            "label": "background Image"
         },
      {
            "type": "text",
            "id": "first_sect_head",
            "label": "Add Heading text"
         },
       {
            "type": "text",
            "id": "first_sect_head2",
            "label": "Add Heading text"
         },
       {
            "type": "text",
            "id": "first_sect_head3",
            "label": "Add Heading text"
         },
      {
            "type": "text",
            "id": "first_sect_head4",
            "label": "Add Heading text"
         },
      {
            "type": "text",
            "id": "name_cstm",
            "label": "Add sub-heading text"
         },
      {
            "type": "textarea",
            "id": "first_sect_text",
            "label": "Add inner text"
         },
      {
            "type": "image_picker",
      "id": "second_section_img",
      "label": "Your image"
         },
      {
            "type": "text",
            "id": "second_section_head",
            "label": "Add Heading text"
         },
      {
            "type": "text",
            "id": "second_section_text",
            "label": "Add pera text"
         },

      {
            "type": "text",
            "id": "last_section_head",
            "label": "Add last heading text"
         },
          {
            "type": "html",
