<div class="custom-multi-text-image">
  <div class="custom-multi-text-image-background-img" {% if section.settings.last_sect_id != blank %} style="background-image: url('{{ section.settings.last_sect_id | img_url:"master" }}');" {% endif %}>
 
 <div class="first-sect-text-head">
<div class="heading-first-setion">
<h4><span>{{ section.settings.first_sect_head }}</span>
<span>{{ section.settings.first_sect_head2 }}</span>
  <span>{{ section.settings.first_sect_head3 }}</span>
  <span>{{ section.settings.first_sect_head4 }}</span>
</h4>
  <p>{{ section.settings.name_cstm }}</p>
</div>

   <div class="text-first-setion">
  <p>{{ section.settings.first_sect_text }}</p>
</div>
 </div>

     <div class="second-sect-text-head">
<div class="heading-second-setion">
<img src="{{section.settings.second_section_img | img_url:'master'}}"/>
</div>

       <div class="main-text-second-setion">
   <div class="text-second-setion-head">
  <h4>{{ section.settings.second_section_head }}</h4>
</div>
       <div class="text-second-setion">
  <p>{{ section.settings.second_section_text }}</p>
</div>
 </div>
     </div>

    <div class="last-head-sect-cust">
    <h3>{{ section.settings.last_section_head }}</h3>
     <p>{{ section.settings.last_section_html }}</p>
    </div>
    
    
  </div>
</div>

